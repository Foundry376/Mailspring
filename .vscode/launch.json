{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Mailspring (Main Process)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "${workspaceFolder}/app/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/app/node_modules/.bin/electron.cmd"
            },
            "program": "${workspaceFolder}/app/src/browser/main.js",
            "args": [
                "--dev"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "outputCapture": "std"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Mailspring (Renderer)",
            "port": 9222,
            "webRoot": "${workspaceFolder}/app/src",
            "timeout": 30000
        }
    ]
}